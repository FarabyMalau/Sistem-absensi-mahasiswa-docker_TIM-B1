pwversion: "3.8"

services:
  db_service:
    image: mysql:8.0
    container_name: db_${GROUP_NAME}
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: ${DB_NAME}
      MYSQL_USER: ${DB_USER}
      MYSQL_PASSWORD: ${DB_PASS}
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - absensi_net

  app_service:
    build: ./app
    container_name: app_${GROUP_NAME}
    restart: always
    env_file:
      - .env
    expose:
      - "3000"
    depends_on:
      - db_service
    networks:
      - absensi_net

  nginx_service:
    image: nginx:alpine
    container_name: nginx_TIM_B1
    ports:
      - "80:80"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - app_service
    networks:
      - absensi_net


volumes:
  db_data:

networks:
  absensi_net:
    driver: bridge


